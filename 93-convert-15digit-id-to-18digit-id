public String convert15to18DigitId(String fifteenDigit)
{
    String res; 
    Id ids = Id.valueOf(fifteenDigit);
    String eighteenDigit = String.valueOf(ids);
    Integer i = fifteenDigit.Length();
    //code here
   ids =  valueOf(fifteenDigit, true);
    if( i < 15)
    {
        res= '-1';
    }
    if( i == 15)
    {
      res = ids;
    }
    
    return res;
}