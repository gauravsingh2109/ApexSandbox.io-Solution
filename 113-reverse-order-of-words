public String reverseWordsInASentence(String sentence){
// reverse the sentence
String res = sentence.reverse();
String str1;
//List for storing words of reverse String
List<String> words = New List<String>();

List<String> newWords = New List<String>();

words = res.split(' ');
For(String str: words)
{ 
    str1 = str.reverse();
    newWords.add(str1);
}
String s = String.join(newWords, ' ');

return s;  
}