public String reverseWordsInASentence(String sentence){
    //Convert the string to a list of string
    List<String> words = sentence.split(' '));
    // reverse the list
    words.reverse(); 

    // reverse each word individualy
      
    for(Integer i = 0; i<=words.size(); i++)
    {
        List<Character> charList = New List<Character> (words[i].toCharArray());
        charList.reverse();
        words[i] = String.join(charList, ''); 
    }

    // Join the reverse back into a string
    String revStr = String.join(words, ' ');
    return revStr;

  
}